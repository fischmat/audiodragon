{
  "recording": {
    "platform": "java-audio",
    "buffer": {
      "type": "hybrid",
      "batchSize": 2048,
      "inMemoryBufferMaxSize": 134217728
    }
  },
  "recognition": {
    "recognizer": "shazam",
    "rapidApiToken": "",
    "secondsUntilRecognition": 20,
    "sampleSeconds": 5,
    "maxRetries": 3,
    "postprocessors": [
      {
        "type": "musicbrainz",
        "preferInput": true,
        "minScore": 90,
        "userAgent": "AudioDragon (https://github.com/fischmat/audiodragon)"
      }
    ]
  },
  "splitting": {
    "splitAfterSilenceMillis": 350,
    "silenceRmsTolerance": 0.0
  },
  "output": {
    "location": "~/Music/AudioDragon",
    "encodingChunkLengthMs": 60000,
    "coverartMaxDimension": 500
  },
  "library": {
    "dbPath": "~/.audiodragon.lib.sqlite",
    "scanThreads": -1
  }
}